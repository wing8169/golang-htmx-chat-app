package templates

import "github.com/wing8169/golang-htmx-chat-app/templates/layout"

templ Index() {
	@layout.MainLayout() {
		<form hx-replace-url="true" hx-post="/login" class="min-h-screen w-screen flex flex-col justify-center items-center relative gap-6 bg-[#292F3F]">
			<input name="username" type="text"/>
			<input name="password" type="password"/>
			<button type="submit" class="text-white">Login</button>
		</form>
	}
}
